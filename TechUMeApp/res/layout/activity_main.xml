<RelativeLayout xmlns:andrd="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/about_us"
		android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/begincalculate"
        android:layout_centerHorizontal="true"
		android:layout_marginTop="67dp"
        android:background="@drawable/round_button"
        android:onClick="switchToAboutUs"
        android:padding="10dp"
        android:text="@string/string_about_us"
        android:textColor="#fff"
        android:textSize="30sp" />

    <Button
        android:id="@+id/instructions"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_us"
        android:layout_centerHorizontal="true"
		android:layout_marginTop="67dp"
        android:background="@drawable/round_button"
        android:onClick="switchToInstructions"
        android:padding="10dp"
        android:text="@string/string_instructions"
        android:textColor="#fff"
        android:textSize="30sp" />

    <Button
        android:id="@+id/begincalculate"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/instructions"
        android:layout_alignParentTop="true"
        android:layout_marginTop="67dp"
        android:background="@drawable/round_button"
        android:onClick="switchToCalculations"
        android:padding="10dp"
        android:text="@string/string_begincalculate"
        android:textColor="#fff"
        android:textSize="30sp" />

</RelativeLayout>
