<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cakewire.techumeapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.cakewire.techumeapp.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cakewire.techumeapp.SecondScreen"
            android:label="@string/title_activity_second_screen"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.cakewire.techumeapp.Instructions"
            android:label="@string/title_activity_instructions"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.cakewire.techumeapp.AboutUs"
            android:label="@string/title_activity_about_us"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.cakewire.techumeapp.Splashscreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_splashscreen"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cakewire.techumeapp.Convert"
            android:label="@string/title_activity_convert"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.cakewire.techumeapp.CalcResults"
            android:label="@string/title_activity_calc_results" >
        </activity>
    </application>

</manifest>
